<?xml version="1.0" encoding="UTF-8"?>


<odoo>
    
    <record id="medicine_block_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">medicine.block</field>
        <field name="arch" type="xml">
            <form string="Tests">
                <sheet>
                    <group>
                        <group>
                            <field name="name_of_block"  options="{'no_create': True, 'no_create_edit':True}"/>
                        </group>

                        <group>
                            <field name="name_of_block_element" />
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="medicine_block_tree" model="ir.ui.view">
        <field name="name">medicine.block.tree</field>
        <field name="model">medicine.block</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name_of_block" />
                <field name="name_of_block_element" />
            </tree>
        </field>
    </record> 


</odoo>